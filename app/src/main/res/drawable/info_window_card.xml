<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50000000"/> <!-- Shadow color -->
            <corners android:radius="18dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <!-- Content background -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Background color -->
            <corners android:radius="18dp"/> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</layer-list>
